{
    "manifest_version": 3,
    "name": "YouTube Shorts Auto Scroller",
    "version": "1.0",
    "description": "Auto-scrolls Shorts, pauses on tab leave.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "action": {
        "default_title": "YouTube Shorts Auto Scroll",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
